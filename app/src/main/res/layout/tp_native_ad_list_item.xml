<RelativeLayout
    android:layout_margin="4dp"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/native_outer_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/fragment_background_color"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/tp_layout_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/gnt_rounded_corners_shape"
            android:gravity="left"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="AD"
            android:textColor="@color/ad_icon_color" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tp_layout_ad">

        <ImageView
            android:id="@+id/tp_native_icon_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:background="@null" />

        <TextView
            android:id="@+id/tp_native_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="32dp"
            android:layout_toRightOf="@+id/tp_native_icon_image"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingLeft="10dp"
            android:textColor="#606060"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tp_native_text"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="78dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:textColor="@color/black" />

        <!--        <RelativeLayout-->
        <!--            android:id="@+id/tp_native_main_image"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="200dp"-->
        <!--            android:layout_below="@+id/tp_native_text"-->
        <!--            android:layout_alignParentStart="true"-->
        <!--            android:layout_marginLeft="10dp"-->
        <!--            android:layout_marginTop="10dp"-->
        <!--            android:layout_marginRight="10dp">-->

        <!--            <ImageView-->
        <!--                android:id="@+id/tp_mopub_native_main_image"-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="match_parent" />-->

        <!--        </RelativeLayout>-->

        <Button
            android:id="@+id/tp_native_cta_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/tp_native_text"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/app_color"
            android:clickable="true"
            android:gravity="center"
            android:text="Learn More"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </RelativeLayout>


</RelativeLayout>
